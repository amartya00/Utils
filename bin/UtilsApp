#!/usr/bin/env python

r"""
This utility consolidates some utility stuff
Usage:
Utils command [options]
The utility commands are:
    [1] TimeUtils
    [2] Tasks
    [3] Todo
    [4] CredsManager
    [5] Work
"""


import sys
import argparse
import os
import json

sys.path.append(os.path.dirname(os.path.realpath(__file__)) + "/../")
sys.dont_write_bytecode = True

from libs.utils.TimeUtils import TimeUtils, TimeUtilsException
from libs.utils.Tasks import Tasks, TasksException
from libs.utils.ToDo import Todo, TodoException
from libs.account.CredsManager import CredsManager
from libs.account.Creds import CredsException

def main():
    args = sys.argv
    if len(args) < 2:
	print("ERROR: Command required")
	print(__doc__)
	return 1
    command = args[1]
    args = args[2:]

    if command == "TimeUtils":
	return TimeUtils.getOpts(args)
    elif command == "Tasks":
	return Tasks.getOpts(args)
    elif command == "Todo":
	return Todo.getOpts(args)
    elif command == "CredsManager":
	return CredsManager.getOpts(args)
    elif command == "Work":
	os.system("clear")
	print("Overall view of things I am doing:\n------------------------------------\n\n")
	ret1 = Tasks.getOpts(["-l"])
	ret2 = Todo.getOpts([])
	return (ret1 and ret2)
    else:
	print("ERROR: Wrong command: " + command)
	print(__doc__)
	return 1

if __name__ == "__main__":
    main()
	
