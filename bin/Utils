#!/usr/bin/env python

r"""
This utility consolidates some utility stuff
Usage:
Utils command [options]
The utility commands are:
    [0] EC2Utils
    [1] Time
    [2] Tasks
"""


import sys
import argparse
import os
import json

sys.path.append(os.path.dirname(os.path.realpath(__file__)) + "/../")
sys.dont_write_bytecode = True

from libs.codedeployUtils.EC2Utils import EC2Utils, EC2UtilsException
from libs.utils.Time import Time, TimeException
from libs.utils.Tasks import Tasks, TasksException

def main():
    args = sys.argv
    if len(args) < 2:
	print("ERROR: Command required")
	print(__doc__)
	return 1
    command = args[1]
    args = args[2:]

    if command == "EC2Utils":
	return EC2Utils.getOpts(args)
    elif command == "Time":
	return Time.getOpts(args)
    elif command == "Tasks":
	return Tasks.getOpts(args)
    else:
	print("ERROR: Wrong command: " + command)
	print(__doc__)
	return 1

if __name__ == "__main__":
    main()
	
